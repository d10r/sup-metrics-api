{
  "name": "token-metrics-api",
  "version": "1.0.0",
  "description": "API providing real-time metrics for an ERC20 token on Base mainnet.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsoa spec-and-routes && tsc && cp src/swagger.json dist/",
